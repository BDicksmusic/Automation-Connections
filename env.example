# Dropbox Configuration
DROPBOX_ACCESS_TOKEN=your_dropbox_access_token_here
DROPBOX_REFRESH_TOKEN=your_dropbox_refresh_token_here
DROPBOX_APP_KEY=your_dropbox_app_key_here
DROPBOX_APP_SECRET=your_dropbox_app_secret_here
DROPBOX_WEBHOOK_SECRET=your_webhook_secret_here
DROPBOX_FOLDER_PATH=/Recordings

# Notion Configuration
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_database_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3000
RAILWAY_URL=your_railway_url_here

# Processing Configuration
MAX_FILE_SIZE_MB=50
SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,flac
TEMPORARY_FOLDER=./temp

# Transcription Configuration
AUTO_FORMAT_TRANSCRIPTION=true
ADD_TITLES_TO_TRANSCRIPTION=true
PARAGRAPH_BREAK_THRESHOLD=150
TITLE_FREQUENCY=1000

# Custom Prompts (optional - leave empty to use defaults)
KEY_POINTS_PROMPT=
SUMMARY_PROMPT=

# Model Settings
TRANSCRIPTION_MODEL=whisper-1
ANALYSIS_MODEL=gpt-3.5-turbo
MAX_TOKENS=500
TEMPERATURE=0.3

# Background Mode (for Railway deployment)
BACKGROUND_MODE=false

# Logging
LOG_LEVEL=info 